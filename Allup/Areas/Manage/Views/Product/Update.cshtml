@model Product

@{
    ViewData["Title"] = "Update";
}

<div class="col-lg-2">
    <h1 class="h3 mb-4 text-gray-800">Product Update Page</h1>
</div>
<div class="row">
    <div class="col-lg-8">
        <form method="post" enctype="multipart/form-data">
            <!-- TITLE -->
            <div class="mb-3">
                <label asp-for=Title class="form-label"></label>
                <input asp-for=Title class="form-control">
                <span asp-validation-for=Title class="text text-danger"></span>
            </div>
            <!-- PRICE -->
            <div class="mb-3">
                <label asp-for=Price class="form-label"></label>
                <input asp-for=Price class="form-control">
                <span asp-validation-for=Price class="text text-danger"></span>
            </div>
            <!-- DiscountedPrice -->
            <div class="mb-3">
                <label asp-for=DiscountedPrice class="form-label"></label>
                <input asp-for=DiscountedPrice class="form-control">
                <span asp-validation-for=DiscountedPrice class="text text-danger"></span>
            </div>
            <!-- ExTax -->
            <div class="mb-3">
                <label asp-for=ExTax class="form-label"></label>
                <input asp-for=ExTax class="form-control">
                <span asp-validation-for=ExTax class="text text-danger"></span>
            </div>
            <!-- Count -->
            <div class="mb-3">
                <label asp-for=Count class="form-label"></label>
                <input asp-for=Count class="form-control">
                <span asp-validation-for=Count class="text text-danger"></span>
            </div>
            <!-- IsBestSeller -->
            <div class="mb-3 form-check">
                <input asp-for=IsBestSeller class="form-check-input">
                <label asp-for=IsBestSeller class="form-check-label"></label>
                <span asp-validation-for=IsBestSeller class="text text-danger"></span>
            </div>
            <!-- IsNewArrival -->
            <div class="mb-3 form-check">
                <input asp-for=IsNewArrival class="form-check-input">
                <label asp-for=IsNewArrival class="form-check-label"></label>
                <span asp-validation-for=IsNewArrival class="text text-danger"></span>
            </div>
            <!-- IsFeatured -->
            <div class="mb-5 form-check">
                <input asp-for=IsFeatured class="form-check-input">
                <label asp-for=IsFeatured class="form-check-label"></label>
                <span asp-validation-for=IsFeatured class="text text-danger"></span>
            </div>
            <!-- MainFile -->
            <div class="form-group">
                <label asp-for=MainFile></label>
                <input asp-for="MainFile" accept="image/jpeg" type="file" class="form-control-file">
                <span asp-validation-for=MainFile class="text text-danger"></span>
            </div>
            <!-- HoverFile -->
            <div class="form-group">
                <label asp-for=HoverFile></label>
                <input asp-for=HoverFile accept="image/jpeg" type="file" class="form-control-file">
                <span asp-validation-for=HoverFile class="text text-danger"></span>
            </div>
            <!-- Files -->
            <div>
                <div class="form-group">
                    <label asp-for=Files></label>
                    <input multiple asp-for=Files accept="image/jpeg" type="file" class="form-control-file">
                    <span asp-validation-for=Files class="text text-danger"></span>
                </div>
                <div class="row productImage">
                    @await Html.PartialAsync("_ProductImagePartial",Model.ProductImages)
                </div>
            </div>
            <!-- BrandId -->
            <div class="form-group">
                <label asp-for="BrandId"></label>
                <select asp-for="BrandId" class="form-control" asp-items="new SelectList(ViewBag.Brands,nameof(Brand.Id), nameof(Brand.Name))">
                </select>
                <span asp-validation-for=BrandId class="text text-danger"></span>
            </div>
            <!-- CategoryId -->
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="new SelectList(ViewBag.Categories,nameof(Category.Id), nameof(Category.Name))">
                </select>
                <span asp-validation-for=CategoryId class="text text-danger"></span>
            </div>
            <!-- TagIds -->
            <div class="input-group mb-3">
                <select asp-for="TagIds" class="form-control" asp-items="new SelectList(ViewBag.Tags,nameof(Category.Id), nameof(Category.Name))">
                </select>
                <span asp-validation-for=TagIds class="text text-danger"></span>
            </div>
            <!-- Description -->
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" asp-action="Uptade" asp-area="manage" asp-controller="product" asp-route-id="@Model.Id" data-product="@Model" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_Validations")
}


